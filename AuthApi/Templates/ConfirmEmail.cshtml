@model AuthApi.Models.ConfirmEmailModel
@{
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<title>Confirmação de E-mail</title>
</head>
<body style="font-family: Arial, sans-serif; color: #333;">
	<h2>Olá, @Model.Nome!</h2>

	<p>Obrigado por se cadastrar em nossa plataforma.</p>

	<p>Para confirmar seu e-mail, clique no botão abaixo:</p>

	<p style="margin: 30px 0;">
		<a href="@Model.LinkConfirmacao" style="padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">
			Confirmar E-mail
		</a>
	</p>

	<p>Se você não solicitou este e-mail, pode ignorá-lo com segurança.</p>

	<hr />
	<p style="font-size: 12px; color: #777;">
		Este é um e-mail automático. Por favor, não responda.
	</p>
</body>
</html>